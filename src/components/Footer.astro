---
import StatusWidget from "@/components/StatusWidget.astro";
import ThemeIcons from "@/components/ThemeIcons.astro";
import BackToTop from "@/components/ui/backtotop.astro";
import { siteConfig } from "@/config/site";
const year = new Date().getFullYear();
---

<footer
  class="mt-auto mb-5"
>
  <div class="relative">
    <div class="absolute right-0 -top-20">
      <BackToTop />
    </div>
  </div>
  <div class="flex justify-between items-center">
    <div
      class="flex flex-wrap gap-1 items-center text-gray-900 text-base dark:text-gray-200"
    >
      Copyright &copy; {year}{" "}
      {siteConfig.author}
    </div>
    <div class="flex flex-row gap-4">
      <StatusWidget slug="v3frankie-me" />
      <ThemeIcons />
    </div>
  </div>
</footer>
